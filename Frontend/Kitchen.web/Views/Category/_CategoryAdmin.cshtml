@model IEnumerable<CategoryDTO>
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div style="display: flex;">
                <h4 class="card-title">Categorys</h4>
                <a asp-controller="Admin" asp-action="AddCategory" style="position: absolute;right: 15%;">
                    <div class="badge badge-outline-success">Create Category</div>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Title</th>
                            <th> Image </th>
                            <th> SVG</th>
                            <th> Description </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>

                                <td>@item.Title</td>
                                <td>
                                    <img src="@item.Image" alt="image">
                                </td>
                                <td>
                                    <img src="@item.svg" alt="image">
                                </td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-controller="Category" asp-action="RemoveCategory" asp-route-Id="@item.Id">
                                        <div class="badge badge-outline-danger">Remove</div>
                                    </a>
                                    <a asp-controller="Admin" asp-action="UpdateCategory" asp-route-Id="@item.Id">
                                        <div class="badge badge-outline-primary">Update</div>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>