@model CategoryDTO
@{
    ViewData["Title"] = "UpdateCategory";
}
@{
    Layout = "_AdminLayout";
}
<div class="card">
    <form asp-controller="Category" asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <h4 class="card-title">Update Category</h4>
            </p>
            <div class="form-group">
                <input style="background-color: #2c2e33;" type="text" name="Id" value="@Model.Id"
                    class="form-control form-control-lg" placeholder="Title" aria-label="Username" readonly>
            </div>
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="Title" value="@Model.Title" class="form-control form-control-lg"
                    placeholder="Title" aria-label="Username">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" value="@Model.Description" name="Description" class="form-control"
                    placeholder="Description" aria-label="Username">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <br>
                        <br>
                        <label>Image</label>
                        <br>
                        <input type="file" name="Image" class="form-control" placeholder="Image" aria-label="Username"
                            required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <img src="@Model.Image" style="width: 120px;height: 110px;" width="100px" class="form-control">
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>SVG</label>
                        <input type="file" name="svg" class="form-control" placeholder="svg" aria-label="Username"
                            required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <img src="@Model.svg" style="width: 80px;height: 70px;" width="100px" class="form-control">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-fw">Update</button>
        </div>
    </form>

</div>