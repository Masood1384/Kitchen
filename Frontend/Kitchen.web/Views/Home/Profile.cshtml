@using Kitchen.web.Models.DTOs
@model UserDTO;
@{
    ViewData["Title"] = "Profile";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
<style>
    h1 {
        text-align: center;
        margin: 5px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 400px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .title {
        color: grey;
        font-size: 18px;
        text-align: center;
        margin: 10px;
    }

    .btn_edit {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }

    .btn_edit:hover,
    a:hover {
        opacity: 0.7;
    }

    .navbar {
        display: block;
    }
</style>

<div style="display: grid;grid-template-columns: 50% 50%;">
    <div style="margin-top: 20%;margin-bottom: 10%;">

        <div class="card">
            <img src="~/images/order-img.jpg" alt="John" style="width:100%">
            <h1>@Model.FullName</h1>
            <p class="title">@Model.Phone</p>
            <p class="title">@Model.Email</p>
            <p class="title">@Model.Address</p>

            <p><a class="btn_edit" asp-action="EditProfile" asp-route-Id="@Model.Id">ویرایش پروفایل</a></p>
        </div>
    </div>
    <div style="margin-top: 20%;">
        <h2>سفارش های شما</h2>
        <div class="accordion accordion-flush" id="accordionFlushExample">

        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $.get("/Order/GetMyOrder", function (html) {
            $("#accordionFlushExample").html(html);
        });
    });
</script>