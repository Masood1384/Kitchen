@model IEnumerable<FoodDTO>
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <div style="display: flex;">
                <h4 class="card-title">Foods</h4>
                <a style="position: absolute;right: 15%;" href="">
                    <div class="badge badge-outline-success">Create Category</div>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Title</th>
                            <th> Image </th>
                            <th> Price</th>
                            <th> Description </th>
                            <th>Catefgory</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>

                                <td>@item.Title</td>
                                <td>
                                    <img src="@item.Image" alt="image">
                                </td>
                                <td>@item.Price</td>
                                <td>@item.Description</td>
                                <td>
                                    @foreach (var i in @item.Categorys)
                                    {


                                        <div class="badge badge-outline-primary">
                                            <a style="width: 20px;display: inline-block;text-align: left;" class="mdi mdi-close"
                                                href=""></a>
                                            @i.Title
                                        </div>

                                    }
                                </td>

                                <td>
                                    <a asp-route-OrderId="@item.Id">
                                        <div class="badge badge-outline-danger">Remove</div>
                                    </a>
                                    <a asp-route-OrderId="@item.Id">
                                        <div class="badge badge-outline-primary">Update</div>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>